@{
    ViewData["Title"] = "FYPeComm - Start your store";
    var storename = "";
    var dbConnectionString = "";

    if (IsPost)
    {
        storename = Request.Form["storename"];

    }
}

<div id="storeDetails">
    <form method="post">
        <label for="storename">Store Name </label>
        <input type="text" name="storename"/>
        <input type="submit" name="nextButton" value="Next" />
    </form>
</div>

<div id="dbDetails">
    <form method="post">
        <label for="dbConnectionString">Database Location </label>
        <input type="text" name="dbConnectionString" />
        <input type="submit" name="finishButton" value="Finish Setup" />
    </form>
</div>
