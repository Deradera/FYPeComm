@model IEnumerable<FYPeComm.Models.Product>

@{
}
<div class="breadcrumb">
    <h4>Breadcrumb trail through categories</h4>
</div>
<div class="container">
    <div id="categories">

    </div>
    @foreach (var item in Model)
    {
        <button class="product-preview" onclick="window.location.href='@Url.Action("Details", "Products", new { Area = "Store", id = item.ProdId })';">
            <img src=@Url.Content(item.ProdImg) alt="Product Image" />
            <h5>@Html.DisplayFor(modelItem => item.ProdName)</h5>
            <h5>@Html.DisplayFor(modelItem => item.ProdPrice)</h5>
        </button>
    }
</div>
